@model Pizza

@{
    Layout = "_Layout";
}
<html lang="en" dir="ltr">
<head>
    <link rel="stylesheet" href="/css/checkout.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" />
</head>
<body>

    <div class="pizza-card" style="margin-bottom:200px;margin-top:50px;">
        <div class="pizza-image">
            @if (Model.Data != null && Model.Data.Length > 0)
            {
                string base64Image = Convert.ToBase64String(Model.Data);
                string imageSource = string.Format("data:image/png;base64,{0}", base64Image);
                <img src="@imageSource" />
            }
        </div>
        <div class="pizza-details">
            <h5 class="pizza-title">@Model.PizzaName</h5>
            <ul class="pizza-ingredients">
                @if (Model.TomatoSauce)
                {
                    <li>ტომატის სოუსი: კი</li>
                }
                @if (Model.Ham)
                {
                    <li>ლორი: კი</li>
                }
                @if (Model.Pepperoni)
                {
                    <li>პეპერონი: კი</li>
                }
                @if (Model.Mushrooms)
                {
                    <li>სოკო: კი</li>
                }
                @if (Model.Olives)
                {
                    <li>ზეთისხილი: კი</li>
                }
                <li>ყველი: @Model.CheeseType.ToString()</li>
                @if (Model.Bacon)
                {
                    <li>ბეკონი: კი</li>
                }
                @if (Model.Onions)
                {
                    <li>ხახვი: კი</li>
                }
                @if (Model.GreenPeppers)
                {
                    <li>Მწვანე წიწაკა: კი</li>
                }
                @if (Model.Pineapple)
                {
                    <li>ანანასი: კი</li>
                }
                @if (Model.Jalapenos)
                {
                    <li>ჯალაპენოსი: კი</li>
                }
                @if (Model.Anchovies)
                {
                    <li>ანჩოუსები: კი</li>
                }
            </ul>
            <p class="final-price">Საბოლოო ფასი: @Model.FinalPrice ₾</p>
            <form action="/Order/Create" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="button-container">
                    <button type="submit" class="order-button">შეკვეთის დადასტურება</button>
                    <button asp-action="EditPizza" asp-controller="Custom" class="order-button">Edit</button>
                </div>
            </form>

        </div>
    </div>

    
</body>
</html>